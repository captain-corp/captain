{{ template "admin_header.tmpl" . }}
<div class="admin-page">
    <div class="page-header">
        <h1>Tags</h1>
        <a href="/admin/tags/create" class="btn btn-primary">Create New Tag</a>
    </div>
    
    {{if .error}}
    <div class="alert alert-error">{{.error}}</div>
    {{end}}

    <div class="table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Tag Name</th>
                    <th>Posts Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{range .tags}}
                <tr>
                    <td>{{.Name}}</td>
                    <td>{{.PostCount}}</td>
                    <td class="actions">
                        <a href="/admin/tags/{{.ID}}/posts" class="btn btn-view">View Posts</a>
                        <button onclick="deleteTag({{.ID}})" class="btn btn-delete">Delete</button>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>

<script>
function deleteTag(id) {
    if (confirm('Are you sure you want to delete this tag?')) {
        fetch(`/admin/tags/${id}`, {
            method: 'DELETE',
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Failed to delete tag');
            }
        });
    }
}
</script>
