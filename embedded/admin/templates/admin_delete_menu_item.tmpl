{{ template "admin_header" . }}
<h1 class="title">Delete Menu Item</h1>
<a href="/admin/menus" class="btn-secondary">‚Üê Back to Menu Items</a>

<div class="confirmation-container">
    <p class="warning-text">Are you sure you want to delete the menu item "{{.item.Label}}"?</p>
    <p>This action cannot be undone.</p>

    <form method="POST" action="/admin/menus/{{.item.ID}}/delete" class="form">
        <div class="form-actions">
            <button type="submit" class="btn-danger">Delete Menu Item</button>
            <a href="/admin/menus" class="btn-secondary">Cancel</a>
        </div>
    </form>
</div>
{{ template "admin_footer" . }}
