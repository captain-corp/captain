{{ template "admin_header" . }}
<h1 class="title">Confirm Delete Media</h1>
<div class="confirm-delete">
    <h3>Are you sure you want to delete "{{.media.Name}}"?</h3>
    <p>This action cannot be undone.</p>
    <div class="actions">
        <button onclick="deleteMedia({{.media.ID}})" class="btn-danger">Delete</button>
        <a href="/admin/media" class="btn-secondary">Cancel</a>
    </div>
</div>
{{ template "admin_footer" . }}
