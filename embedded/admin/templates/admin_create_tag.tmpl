{{ template "admin_header" . }}
<div class="mb-8">
    <h1 class="title">Create New Tag</h1>
    <a href="/admin/tags" class="btn-secondary">â† Back to Tags</a>
</div>

{{ if .error }}
    <div class="error-message">{{ .error }}</div>
{{ end }}

<div class="editor-container">
    <form method="POST" action="/admin/tags/create" class="form">
        <div class="form-group">
            <label for="name">Tag Name</label>
            <input type="text" 
                    id="name" 
                    name="name" 
                    class="form-control" 
                    required 
                    placeholder="Enter tag name">
        </div>
        <div class="form-group">
            <button type="submit" class="btn-primary">Create Tag</button>
        </div>
    </form>
</div>
{{ template "admin_footer" . }}