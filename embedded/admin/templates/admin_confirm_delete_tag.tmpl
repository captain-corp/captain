{{ template "admin_header" . }}
<h1 class="title">Confirm Delete Tag</h1>
<div class="confirm-delete">
    <h3>Are you sure you want to delete the tag "{{.tag.Name}}"?</h3>
    <p>This action cannot be undone.</p>
    <div class="actions">
        <button onclick="deleteTag({{.tag.ID}})" class="btn-danger">Delete</button>
        <a href="/admin/tags" class="btn-secondary">Cancel</a>
    </div>
</div>
{{ template "admin_footer" . }}