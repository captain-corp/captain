{{ template "admin_header" . }}
<h1 class="title">Confirm Delete Menu Item</h1>
<div class="confirm-delete">
    <h3>Are you sure you want to delete the menu item "{{.menuItem.Label}}"?</h3>
    <p>This action cannot be undone.</p>
    <div class="actions">
        <button onclick="deleteMenuItem({{.menuItem.ID}})" class="btn-danger">Delete</button>
        <a href="/admin/menus" class="btn-secondary">Cancel</a>
    </div>
</div>
{{ template "admin_footer" . }}