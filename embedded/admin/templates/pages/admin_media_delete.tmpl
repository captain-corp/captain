{{ template "admin_header.tmpl" . }}

<div class="admin-page">
    <h1>Delete Media</h1>
    <div class="confirm-delete">
        <p>Are you sure you want to delete this media file?</p>
        
        <div class="media-preview">
            {{ if eq (slice .media.MimeType 0 5) "image" }}
            <img src="/media/{{ .media.Path }}" alt="{{ .media.Name }}">
            {{ else }}
            <div class="file-preview">
                <i class="fas fa-file"></i>
            </div>
            {{ end }}
        </div>

        <div class="media-info">
            <h3>{{ .media.Name }}</h3>
            {{ if .media.Description }}
            <p>{{ .media.Description }}</p>
            {{ end }}
        </div>

        <div class="actions">
            <form action="/admin/media/{{ .media.ID }}" method="POST" class="inline">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-delete">Delete</button>
            </form>
            <a href="/admin/media" class="btn">Cancel</a>
        </div>
    </div>
</div>

{{ template "admin_footer.tmpl" . }}
