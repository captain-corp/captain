{{ template "admin_header" . }}
<div>
    <h1 class="title">Tags</h1>

    {{ if .tags }}
        <div class="mb-8 cursor-pointer">
            <a href="/admin/tags/create" class="btn-primary">
                Create New Tag
                <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
        </div>
    {{ end }}

    <div class="table-container">
        {{if .tags}}
        <table class="table">
            <thead>
                <tr>
                    <th>Tag Name</th>
                    <th>Slug</th>
                    <th>Posts Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{range .tags}}
                <tr>
                    <td>{{.Name}}</td>
                    <td>{{.Slug}}</td>
                    <td>{{.PostCount}}</td>
                    <td class="actions">
                        <a href="/admin/tags/{{.ID}}/edit" class="btn-primary">Edit</a>
                        <a href="/admin/tags/{{.ID}}/delete" class="btn-danger">Delete</a>
                        <a href="/admin/tags/{{.ID}}/posts" class="btn-secondary">View Posts</a>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
        {{else}}
        <div class="empty-state">
            <p>No tags found</p>
            <a href="/admin/tags/create" class="link-primary">
                Create your first tag!
                <svg class="w-4 h-4 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
        </div>
        {{end}}
    </div>
</div>

{{ template "admin_footer" . }}