{{ template "admin_header" . }}
<div>
    <h1 class="title">Pages</h1>

    {{ if .pages }}
    <div class="mb-8 cursor-pointer">
        <a href="/admin/pages/create" class="btn-primary">
            Create New Page
            <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
            </svg>
        </a>
    </div>
    {{ end }}

    <div class="table-container">
        {{if .pages}}
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Content Type</th>
                    <th>Visible</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{range .pages}}
                <tr>
                    <td>{{.Title}}</td>
                    <td>{{.Slug}}</td>
                    <td>{{.ContentType}}</td>
                    <td>{{if .Visible}}Yes{{else}}No{{end}}</td>
                    <td class="actions">
                        <a href="/admin/pages/{{.ID}}/edit" class="btn-primary">Edit</a>
                        <a href="/admin/pages/{{.ID}}/delete" class="btn-danger">Delete</a>
                        <a href="/pages/{{.Slug}}" class="btn-secondary" target="_blank">View</a>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
        {{else}}
        <div class="empty-state">
            <p>No pages found. Get started by creating your first page!</p>
            <a href="/admin/pages/create" class="link-primary">
                Create Your First Page
                <svg class="w-4 h-4 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
            </a>
        </div>
        {{end}}
    </div>
</div>
{{ template "admin_footer" . }}