
{{ template "admin_header" . }}
<div class="p-4">
    <div class="mb-8">
        <h1 class="title">Posts tagged with "{{.tag.Name}}"</h1>
        <a href="/admin/tags" class="btn-secondary">‚Üê Back to Tags</a>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Published At</th>
                    <th>Visible</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{range .posts}}
                <tr>
                    <td>{{.Title}}</td>
                    <td>{{.Author.FirstName}} {{.Author.LastName}}</td>
                    <td x-dynamic-date="{{.PublishedAtUTC}}" x-dynamic-date-timezone="{{.PublishedAtTimeZoneOffset}}">
                        {{.PublishedAt.Format "2006-01-02 15:04"}}
                    </td>
                    <td>{{if .Visible}}Yes{{else}}No{{end}}</td>
                    <td class="actions">
                        <a href="/admin/posts/{{.ID}}/edit" class="btn-primary">Edit</a>
                        <a href="/admin/posts/{{.ID}}/delete" class="btn-danger">Delete</a>
                        <a href="/posts/{{.Slug}}" target="_blank" class="btn-secondary">View</a>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">No posts found with this tag</td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>
{{ template "admin_footer" . }}