{{ template "header.tmpl" . }}
<main class="main-content">
    <section class="text-section centered-container">
        <h2>Edit Post</h2>
        <form id="edit-post-form">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="{{ .post.Title }}" required>
            <label for="slug">Slug:</label>
            <input type="text" id="slug" name="slug" value="{{ .post.Slug }}" required>
            <label for="content">Content:</label>
            <textarea id="content" name="content" required>{{ .post.Content }}</textarea>
            <label for="publishedAt">Published At:</label>
            <input type="datetime-local" id="publishedAt" name="publishedAt" value="{{ .post.PublishedAt.Format "2006-01-02T15:04" }}" required>
            <label for="visible">Visible:</label>
            <input type="checkbox" id="visible" name="visible" {{ if .post.Visible }}checked{{ end }}>
            <button type="submit">Update Post</button>
        </form>
    </section>
</main>
{{ template "footer.tmpl" . }}