{{ template "header.tmpl" . }}
<main class="main-content">
    <section class="text-section">
        <h1>{{ .title }}</h1>
        {{ range .posts }}
            <article>
                <h2><a href="/posts/{{ .Slug }}">{{ .Title }}</a></h2>
                <div class="content">{{ .Content }}</div>
            </article>
        {{ end }}
    </section>
</main>
{{ template "footer.tmpl" . }}